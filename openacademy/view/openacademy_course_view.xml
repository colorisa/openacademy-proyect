<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!--Insertando campos en la tabla ir.ui.view-->
		<record model="ir.ui.view" id="course_form_view"> 
			<field name="name">course.form.view</field>
			<field name="model">openacademy.course</field>
			<field name="arch" type="xml">
				<!--este campo es el que define que es un formulario-->
				<form string="Course form">
					<!--define una tabla-->
					<sheet>
						<!--Agrupa campos-->
						<group>
							<field name="name"/>
							<field name="responsible_id"/>
							<!--field name="description"/-->
						</group>
							<notebook>
								<page string="Description">
									<field name="description"/>
								</page>
								<page string="About">
									This is an example of notebooks									
								</page>
								<page string="Sessions">
									<field name="session_ids">
										<tree string="Registered session" editable="bottom"> 
											<field name="name"/>
											<field name="instructor_id"/>
										</tree>
									</field>
								</page>
							</notebook>
					</sheet>
				</form>				
			</field>
		</record>
		
		<!--Vista de arbol-->
		<record model="ir.ui.view" id ="course_tree_view">
			<field name="name">course.tree.view</field>
			<field name="name">openacademy.course</field>
			<field name="arch" type="xml">
				<tree string="Course">
					<field name="name"/>
					<field name="responsible_id"/>
				</tree>			
			</field>
		</record>
		
		<!--Esta es la accion para abrir una vista o definirla-->
		<record>
			<field name="name">Courses</field>
			<field name="res_model">openacademy.course</field>
			<field name="view_type">form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first course
				</p>
			</field>
		</record>
		<!--Parte superior del menu-->			
		<menuitem id="main_openacademy_menu" name="Open Academy"/>
		<!--Un primer nivel en la parte izquierda del menu se necesita
			antes de usar un atributo tipo action=-->	
		<menuitem id="openacademy_menu" name="Open Academy"
			parent="main_openacademy_menu"/>
		<!--El siguiente menuitem deberia aparece "despues" del
			parent openacademy_meny y "despues" de su action 
			course_list action-->	
		<menuitem id="courses_menu" name="Courses"
			parent="openacademy_menu" action="course_list_action"/>
		<!--localizacion de id completa:
			action="openacademy.course_list_action" 
			No se requiere cuando se esta en el mismo modulo-->			
				
	</data>
</openerp>